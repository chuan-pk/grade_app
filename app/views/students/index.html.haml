%h1 Listing students

%table
  %thead
    %tr
      %th Student
      %th Name
      %th Email
      %th Password
      %th Birthdate
      %th Sex
      %th
      %th
      %th

  %tbody
    - @students.each do |student|
      %tr
        %td= student.student_id
        %td= student.name
        %td= student.email
        %td= student.password
        %td= student.birthdate
        %td= student.sex
        %td= link_to 'Show', student
        %td= link_to 'Edit', edit_student_path(student)
        %td= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Student', new_student_path
